<% layout('layout') -%>
<% script('js/meteo.js') %>

<div class="container-fluid">
    <h1 class="mt-4"></h1>
    <div class="row">
        <div class="col-xl-6">
            <div class="card">
                <div class="card-header text-center">
                    <i class="fas fa-cloud-sun fa-2x"></i><strong> Meteorology</strong>
                </div>
    
                <div class="card-body">
                    <form>
                        <div class="form-group"><label for="city">City</label><input class="form-control" id="city" type="text" placeholder="Enter city" autofocus required /></div>
                        <input type="submit" class="btn btn-primary w-100" id="login" value="Go">
                    </form>
                    <div id="result"></div>
                </div>
            </div>
        </div>
    </div>
</div>
